<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D6DCA7"
        android:visibility="visible"

        tools:context=".LoginActivity"
        tools:visibility="visible">

        <TextView
            android:id="@+id/textLogo"

            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="84dp"
            android:text="Fit-se"
            android:textColor="#FF000000"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editNome"
            android:layout_width="318dp"
            android:layout_height="58dp"
            android:layout_marginTop="84dp"
            android:background="@drawable/edittext_backgraund"
            android:ems="10"
            android:hint="Coloque Seu Nome"
            android:inputType="text"
            android:padding="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textLogo"
            app:layout_constraintTop_toBottomOf="@+id/textLogo" />

        <EditText
            android:id="@+id/editSenha"
            android:layout_width="318dp"
            android:layout_height="58dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/edittext_backgraund"
            android:ems="10"
            android:hint="Coloque Sua Senha"
            android:inputType="numberPassword"
            android:padding="18dp"
            app:layout_constraintEnd_toEndOf="@+id/editNome"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/editNome"
            app:layout_constraintTop_toBottomOf="@+id/editNome" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Btlogin"
            style="android:style/widget.Button"
            android:layout_width="209dp"
            android:layout_height="55dp"
            android:layout_marginTop="256dp"
            android:background="@drawable/btn_login"
            android:text="Login"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/editNome"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="@+id/editNome"
            app:layout_constraintTop_toBottomOf="@+id/editNome"
            app:layout_constraintVertical_bias="0.155" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:layout_marginTop="12dp"
            android:text="Esqueceu a Senha?"
            android:textColor="#FF6200EE"
            app:layout_constraintStart_toStartOf="@+id/editSenha"
            app:layout_constraintTop_toBottomOf="@+id/editSenha" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>